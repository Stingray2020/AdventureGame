<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- start screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <screen id="start" controller="mygame.appstates.MenuAppState">
        
    </screen>
    <screen id="dialog" controller="mygame.appstates.MenuAppState">
        <layer id="background" backgroudColor="#000f">
            
        </layer>
        <layer id="forground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" width="100%" height="70%" childLayout="horizontal" backgroundColor="#0000">  
            <!-- spacer -->
            </panel>
            <panel id="panel_bottom" width="100%" height="30%" childLayout="horizontal" backgroundColor="#008f" > 
                <control name="label" color="#000" text="" width="20%" height="100%" wrap="true" />
                <control name="label" id="dialogtxt"  color="#000" text="
                     "  width="75%" height="100%" wrap="true" textHAlign="left"  textVAlign="top" />
            </panel>
        </layer>
    </screen>
    
    <screen id="hud" controller="mygame.appstates.MenuAppState">
        <layer id="background" backgroudColor="#000f">
            
        </layer>
        <layer id="forground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" width="100%" height="70%" childLayout="horizontal" backgroundColor="#0000">  
            <!-- spacer -->
            </panel>
            <panel id="panel_bottom" width="100%" height="30%" childLayout="horizontal" backgroundColor="#008f" >  
                <control name="label" color="#000" text="This is hud"  width="100%" height="100%" wrap="true" />
            </panel>
        </layer>
    </screen>
    <screen id="inventory" controller="mygame.appstates.MenuAppState">
        <layer id="background" backgroudColor="#000f">
            
        </layer>
        <layer id="forground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" width="100%" height="70%" childLayout="horizontal" backgroundColor="#0000">  
            <!-- spacer -->
            </panel>
            <panel id="panel_bottom" width="100%" height="30%" childLayout="horizontal" backgroundColor="#008f" >  
                <control name="label" color="#000" text="This is inventory"  width="100%" height="100%" wrap="true" />
            </panel>
        </layer>
    </screen>
    <screen id="pause" controller="mygame.appstates.MenuAppState">
        <layer id="background" backgroudColor="#000f">
            
        </layer>
        <layer id="forground" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_top" width="100%" height="70%" childLayout="horizontal" backgroundColor="#0000">  
            <!-- spacer -->
            </panel>
            <panel id="panel_bottom" width="100%" height="30%" childLayout="horizontal" backgroundColor="#008f" >  
                <control name="label" color="#000" text="This is Pause Menu"  width="100%" height="100%" wrap="true" />
            </panel>
        </layer>
    </screen>
    
</nifty>
